[core]
	editor = mvim -f
	excludesfile = ~/.gitignore_global
	autocrlf = input
[user]
	name = Youcef Mammar
	email = ymammar@alkemics.com
[alias]
	a = add
	cia = commit -a
	cim = commit -m
	ci = commit
	co = checkout
  re = rebase
  st = status --untracked-files=no
	ss = status .
	lf = ls-files
	pushu = push -u origin HEAD
	pushf = push -f
	remotes = remote -v
	br = branch
  brc = branch --sort=committerdate
	brdiff = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative 
	diffsrc = diff -- . ':!**/*.min.*'
	lsf = ls-files
	lsfm = ls-files -m --exclude-standard
	lsfo = ls-files -o --exclude-standard 
	sst = status --short
	ciaa = commit -a --amend
	ciaae = commit -a --amend --no-edit
	ciam = commit -am
	chp = cherry-pick
	stashes = stash list
	brs = for-each-ref --count=30 --sort=-committerdate refs/heads/ --format='%(refname:short)'
	lol = log --oneline --graph
	lom = log --oneline --graph master..HEAD
	lo = log --oneline --graph master..HEAD
	bro = browse
	comp = compare
  rebis = rebase -i staging
  rebc = rebase --continue
  pullreb = pull upstream staging --rebase
  pullup = pull upstream HEAD
  hop = pull upstream HEAD --rebase
  bis = bisect

[diff]
	renames = true
	tool = opendiff

[color]
	ui = true
[github]
	user = tkrugg
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[merge]
	tool = opendiff
[hub]
	host = github.com
[credential]
	helper = osxkeychain
[commit]
	template = ~/.stCommitMsg
