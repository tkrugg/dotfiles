" leader key
let mapleader = ","

" coloration
colo Tomorrow-Night-Bright
ca darken colo Tomorrow-Night-Bright
ca lighten colo Tomorrow

" open a new tab
ca tn tabnew
nmap <c-t> :tabnew<CR>

"open file under cursor in new tab
map <leader>gf :tabe <cfile><CR> 

" that moment when you forget to say "sudo"
cmap w!! w ! sudo > /dev/null %

"indenting with visual mode
vnoremap < <gv
vnoremap > >gv

"spelling correction faster
nmap ú ]s
nmap Ú [s
nmap éz 1z=

"Vundle
ca BC BundleClean
ca BI BundleInstall

"fugitive
nmap <leader>ga :! git add %; git commit -m "minor"; git push<CR>
nmap <leader>gb :Gblame<CR>
nmap <leader>gc :Gcommit<CR>
nmap <leader>gd :Gdiff<CR>
nmap <leader>gp :! git push<CR>
nmap <leader>gs :Gstatus<CR>
nmap <leader>gw :Gwrite<CR>

"snipmate 
let g:snips_trigger_key = '§'

"tern
nmap <leader>td :TernDefSplit<CR>
nmap <leader>tdb :TernDocBrowse<CR>




"folding
ca fe set foldenable
ca fmi set foldmethod=indent
ca fmm set foldmethod=manual
ca fms set foldmethod=syntax

"NerCommenter
map <C-_> <plug>NERDCommenterToggle<CR>

"NerdTree
nmap <Space>F :NERDTreeFind<cr>
nmap <Space>f :NERDTreeToggle<cr>
nmap <Space>l :TagbarToggle<cr>
set noballooneval

let NERDTreeIgnore = ['\.pyc$']

"CtrlP

let g:ctrlp_root_markers = ['.ctrlp']
" Ignore these directories
set wildignore+=*/out/**
set wildignore+=*/vendor/**

"Gvim
"set guioptions-=m  "remove menu bar
set guioptions-=T  "remove toolbar
set guioptions-=r  "remove right-hand scroll bar


" AngularJS delimiters 
"imap §! {{  }}<Left><Left><Left>
"imap §§ [[ 
imap ø {
imap þ }
imap ł [
imap µ ]



" remove extra spaces
ca cls s/\s\s*/ /g


" black hole register
nmap <leader>dd "_dd
nmap <S-$> g_


map <leader><leader>v "+p<CR>:exe ":echo 'pasted from system clipboard'"<CR>
map <leader>c "+y<CR>:exe ":echo 'copied to clipboard'"<CR>
map <leader>C "*y<CR>:exe ":echo 'copied from mouse clipboard'"<CR>
map <leader>v "+p<CR>:exe ":echo 'pasted to clipboard'"<CR>
map <leader>V "*p<CR>:exe ":echo 'pasted from mouse clipboard'"<CR>


ca ~~ ~/.
ca sorc source ~/.vimrc 

ca wwrap set wrap linebreak nolist formatoptions=1
nmap <Down> gj
nmap <Up> gk
imap æ {%%<Esc>i

" zoom
set lbr

set completeopt-=preview

"font
set guifont=Source\ Code\ Pro\ for\ Powerline\ Medium\ 12
