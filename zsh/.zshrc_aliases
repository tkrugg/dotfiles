function acurl {
  if [ -z "$TOKEN" ]; then
    (echo Fetching token >&2)
    TOKEN=$(curl -s 'https://apis.alkemics.com/auth/v1/user/login' --data-binary '{"username":"ymammar@alkemics.com","password":"Qwen4xso","grant_type":"password","origin":"dashboard_stream","platform":0}' --compressed | jq .access_token | sed s/\"//g)
    (echo Token acquired >&2)
  fi

  curl $@ -H "Authorization: Bearer $TOKEN";
}

